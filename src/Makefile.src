CC      = gcc
BINDIR  = {bindir}
DATADIR = {datadir}
CFLAGS  = -O3 -ansi -Wall -pedantic -I$(HOME)/include -L$(HOME)/lib -Wno-stringop-truncation
LFLAGS  = -lbiop -lgen -lm -lxml2
TARGETS = absplit

all : $(TARGETS)
	@echo " "
	@echo " --- BUILD COMPLETE --- "
	@echo " "

install :
	mkdir -p $(BINDIR)
	cp $(TARGETS) $(BINDIR)

distclean : clean
	\rm Makefile

clean :
	\rm -f *.o $(TARGETS)

absplit : absplit.c absplit.h Makefile
	$(CC) $(CFLAGS) -o $@ $< $(LFLAGS)

